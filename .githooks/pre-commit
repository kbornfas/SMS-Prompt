#!/bin/bash
# Pre-commit hook to check for uncommitted changes
# To install: git config core.hooksPath .githooks

# This hook can be bypassed with --no-verify flag or by setting ALLOW_UNCOMMITTED=1

# Get the git repository root directory
REPO_ROOT=$(git rev-parse --show-toplevel)

# Run the uncommitted changes check from the repo root
"$REPO_ROOT/check-uncommitted.sh"
